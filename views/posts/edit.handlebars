<div class="card card-body">
    <h3>Chỉnh sửa bài viết</h3>
    <form action="/posts/{{post._id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Tiêu đề</label>
            <input type="text" class="form-control" name="title" required value="{{post.title}}">
        </div>
        <div class="form-group mt-2">
            <label for="text">Nội dung</label>
            <textarea name="text" class="form-control" required>{{post.text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Confirm</button>
    </form>
</div>